{
  "name": "oneutil",
  "version": "1.0.1",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/js || true",
    "uglify": "mkdirp dist/js -p && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "serve": "browser-sync start --server --files \"dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:js": "run-s lint uglify",
    "build": "run-s build:*",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onekit-js/oneutil.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^2.1.1",
    "onchange": "^7.1.0",
    "uglify-js": "^2.8.21"
  },
  "bugs": {
    "url": "https://github.com/onekit-js/oneutil/issues"
  },
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "homepage": "https://github.com/onekit-js/oneutil#readme"
}
